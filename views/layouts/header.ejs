<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Belle</title>
  <meta name="description" content="description">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="/favicon/favicon.ico">
  <link rel="icon" type="image/gif" href="/favicon/animated_favicon1.gif">
  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/favicon.png" />
  <!-- Plugins CSS -->
  <link rel="stylesheet" href="/css/plugins.css">
  <!-- Bootstap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <!-- Main Style CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/responsive.css">
</head>

<body class="p-0">
  <div class="pageWrapper">
    <!--Search Form Drawer-->
    <div class="search">
      <div class="search__form">
        <form class="search-bar__form" action="#">
          <button class="go-btn search__button" type="submit"><i class="icon anm anm-search-l"></i></button>
          <input class="search__input" type="search" name="q" value="" placeholder="Search entire store..." aria-label="Search" autocomplete="off">
        </form>
        <button type="button" class="search-trigger close-btn"><i class="icon anm anm-times-l"></i></button>
      </div>
    </div>
    <!--End Search Form Drawer-->
    <!--Top Header-->
    <div class="top-header">
      <div class="container-fluid">
        <div class="row">
          <div class="col-10 col-sm-8 col-md-5 col-lg-4">
            <div class="currency-picker">
              <span class="selected-currency">INR</span>
              <ul id="currencies">
                <li data-currency="INR" class="selected">INR</li>
                <li data-currency="GBP" class="">GBP</li>
                <li data-currency="CAD" class="">CAD</li>
                <li data-currency="USD" class="">USD</li>
                <li data-currency="AUD" class="">AUD</li>
                <li data-currency="EUR" class="">EUR</li>
                <li data-currency="JPY" class="">JPY</li>
              </ul>
            </div>
            <div class="language-dropdown">
              <span class="language-dd">English</span>
              <ul id="language">
                <li class="">German</li>
                <li class="">French</li>
              </ul>
            </div>
            <p class="phone-no"><i class="anm anm-phone-s"></i> +91 701 266 8570</p>
          </div>
          <div class="col-sm-4 col-md-4 col-lg-4 d-none d-lg-none d-md-block d-lg-block">
            <div class="text-center">
              <p class="top-header_middle-text"> Worldwide Express Shipping</p>
            </div>
          </div>
          <div class="col-2 col-sm-4 col-md-3 col-lg-4 text-right">
            <% if (user) { %>
            <!-- User is logged in -->
            <span class="user-menu d-block d-lg-none"><i class="anm anm-user-al" aria-hidden="true"></i></span>
            <ul class="customer-links list-inline">
              <li><%=user.firstname %> <%= user.lastname %></li>
              <li><a href="/logout">Logout</a></li>
              <li><a href="/wishlist">Wishlist</a></li>
            </ul>

            <% } else { %>
            <!-- User is not logged in -->
            <span class="user-menu d-block d-lg-none"><i class="anm anm-user-al" aria-hidden="true"></i></span>
            <ul class="customer-links list-inline">
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Create Account</a></li>
            </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!--End Top Header-->
    <!--Header-->
    <div class="header-wrap classicHeader animated d-flex">
      <div class="container-fluid">
        <div class="row align-items-center">
          <!--Desktop Logo-->
          <div class="logo col-md-2 col-lg-2 d-none d-lg-block">
            <a href="/">
              <img src="/images/logo.svg" alt="Belle Multipurpose Html Template" title="Belle Multipurpose Html Template" />
            </a>
          </div>
          <!--End Desktop Logo-->
          <div class="col-2 col-sm-3 col-md-3 col-lg-8">
            <div class="d-block d-lg-none">
              <button type="button" class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
                <i class="icon anm anm-times-l"></i>
                <i class="anm anm-bars-r"></i>
              </button>
            </div>
            <!--Desktop Menu-->
            <nav class="grid__item" id="AccessibleNav">
              <!-- for mobile -->
              <ul id="siteNav" class="site-nav medium center hidearrow">

                <li class="lvl1 parent megamenu"><a href="/">Home <i class="anm anm-angle-down-l"></i></a></li>

                <li class="lvl1 parent megamenu"><a href="/productView">Shop <i class="anm anm-angle-down-l"></i></a></li>

                <li class="lvl1 parent dropdown"><a href="/aboutUs">About Us <i class="anm anm-angle-down-l"></i></a></li>

                <% if (locals.user) { %>
                <li class="lvl1"><a href="/userProfile"><b>My Profile</b> <i class="anm anm-angle-down-l"></i></a></li>
                <% } %>

              </ul>
            </nav>
            <!--End Desktop Menu-->
          </div>
          <!--Mobile Logo-->
          <div class="col-6 col-sm-6 col-md-6 col-lg-2 d-block d-lg-none mobile-logo">
            <div class="logo">
              <a href="/">
                <img src="/images/logo.svg" alt="Belle Multipurpose Html Template" title="Belle Multipurpose Html Template" />
              </a>
            </div>
          </div>
          <!--Mobile Logo-->
          <div class="col-4 col-sm-3 col-md-3 col-lg-2">
            <% if (locals.user) { %>
            <div class="site-cart">
              <a href="#;" class="site-header__cart" title="Cart">
                <i class="icon anm anm-bag-l"></i>

                <% 
                let sum = 0; // 
                if (cartProduct && cartProduct.products) {
                  cartProduct.products.forEach(product => {
                    sum += product.quantity; 
                  });
                }
              %>
                <span id="CartCount" class="site-header__cart-count" data-cart-render="item_count"><%= cartProduct && sum > 0 ? sum : '0' %></span>
              </a>
              <!--Minicart Popup-->
              <div id="header-cart" class="block block-cart">
                <ul class="mini-products-list">
                  <%  if(cartProduct && cartProduct.products.length > 0 ) { %>
                  <% cartProduct.products.forEach(product => { %>
                  <li class="item">
                    <a class="product-image" href="/singleProduct?id=<%= product.product._id %>">
                      <% if(product.product && product.product.images && product.product.images.length > 0) { %>
                        <img src="/uploads/<%= product.product.images[0] %>" alt="<%= product.product.name %>" title="" />
                      <% } else { %>
                        <img src="/path/to/default/image.jpg" alt="Default Product Image" title="" />
                      <% } %>
                    </a>
                    <div class="product-details">

                      <a href="#" class="remove"><i class="anm anm-times-l" aria-hidden="true"></i></a>
                      <!-- <a href="#" class="edit-i remove"><i class="anm anm-edit" aria-hidden="true"></i></a> -->
                      <a class="pName" href="/singleProduct?id=<%= product.product._id %>"><%= product.product.name %></a>
                      <div class="variant-cart"><%= product.product.color%>/<%= product.product.size %></div>
                      <div class="wrapQtyBtn">
                        <div class="qtyField">
                          <span class="label">Qty: &nbsp; <%= product.quantity %></span>

                        </div>
                      </div>
                      <div class="priceRow">
                        <div class="product-price">
                          <% if(product.product.offerApplied === true) { %>
                          <span class="money" style="text-decoration: line-through;">₹<%= product.product.price %></span>
                          <span class="money" style="color: red;">₹<%= product.product.offerPrice %></span> &nbsp;
                          <span class="money" style="color: red;"> offerApplied</span>
                          <% } else { %>
                            <span class="money">₹<%= product.product.price %></span>
                            <% } %>
                        </div>
                      </div>
                    </div>
                    <% }); %>

                  </li>

                </ul>
                <div class="total">
                  <div class="total-in">
                    <span class="label">Cart Subtotal:</span><span class="product-price"><span class="money">₹<%= cartProduct.cartTotal %></span></span>
                  </div>

                  <div class="buttonSet text-center">
                    <a href="/cart" class="btn btn-secondary btn--small">View Cart</a>
                    <!-- <a href="checkout.html" class="btn btn-secondary btn--small">Checkout</a> -->
                  </div>
                </div>
                <% } else { %>

                <span class="text" style="">No product in the cart</span>

                <% } %>
              </div>


              <!--End Minicart Popup-->
            </div>
            <% } else { %>

              <% } %>

            <div class="site-header__search">
              <button type="button" class="search-trigger"><i class="icon anm anm-search-l"></i></button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--End Header-->
    <!--Mobile Menu-->
    <div class="mobile-nav-wrapper" role="navigation">
      <div class="closemobileMenu"><i class="icon anm anm-times-l pull-right"></i> Close Menu</div>
      <ul id="MobileNav" class="mobile-nav">
        <li class="lvl1 parent megamenu"><a href="/">Home <i class="anm anm-plus-l"></i></a></li>
        <li class="lvl1 parent megamenu"><a href="/productView">Shop <i class="anm anm-plus-l"></i></a></li>
        <li class="lvl1 parent megamenu"><a href="/aboutUs">About Us <i class="anm anm-plus-l"></i></a></li>
        <li class="lvl1 parent megamenu"><a href="/userProfile">My profile <i class="anm anm-plus-l"></i></a></li>
        <li class="lvl1"><a href="#"><b>Buy Now!</b></a>
        </li>
      </ul>
    </div>
    <!--End Mobile Menu-->